{
    "compilerOptions": {
        "target": "es2017",
        "module": "CommonJS",
        "outDir": "dist",
        "alwaysStrict": true,
        "sourceMap": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "declaration": true,
        "downlevelIteration": true,
        "skipLibCheck": true,
        "esModuleInterop": true
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.js",
    ]
}