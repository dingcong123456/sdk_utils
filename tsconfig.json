{
    "compilerOptions": {
        "strict": true,
        "target": "esnext",
        "module": "esnext",
        "outDir": "dist",
        "sourceMap": true,
        "moduleResolution": "node",
        "removeComments": true,
        "declaration": true,
        "downlevelIteration": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "baseUrl": "./",
    },
    "include": [
        "./src/**/*"
    ]
}